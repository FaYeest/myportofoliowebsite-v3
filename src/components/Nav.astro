---
import { Astronav, MenuItems, MenuIcon } from "astro-navbar";
---

<header class="lg:flex p-5 gap-5 bg-slate-900">
    <Astronav>
        <div class="flex w-full justify-between items-center">
            <a href="/" class="text-2xl font-bold text-white">MTF</a>
            <div class="block lg:hidden" id="menuToggle" style="padding: 10px;">
                <MenuIcon class="w-6 h-6 text-white"/>
            </div>
        </div>
        <MenuItems class="hidden lg:flex lg:items-center" id="menuItems">
            <ul class="flex flex-col lg:flex-row lg:gap-5" id="menuItemsList">
                <li><a href="/" class="nav-link">Home</a></li>
                <li><a href="/projects" class="nav-link">Projects</a></li>
                <li><a href="/about" class="nav-link">About</a></li>
            </ul>
        </MenuItems>
    </Astronav>
</header>

<style>
    .nav-link {
        color: #fff;
        text-decoration: none;
        transition: color 0.3s ease;
        padding: 10px; /* Menambahkan padding untuk memperluas area hitbox */
        display: block; /* Mengubah tautan menjadi blok untuk mengisi area parent */
    }

    .nav-link:hover {
        color: #fcd34d; /* Ubah warna menjadi kuning saat hover */
    }

    /* Animasi untuk menu */
    #menuItems {
        max-height: 0;
        overflow: hidden;
        transition: max-height 0.3s ease;
    }

    #menuItems.visible {
        max-height: 200px; /* Atur tinggi maksimum menu */
    }

    /* Efek hover pada menu */
    #menuItemsList li:hover {
        background-color: #4a5568;
        border-radius: 0.25rem;
    }

    #menuItemsList li:hover .nav-link {
        color: #fcd34d;
    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const menuToggle = document.getElementById('menuToggle');
        const menuItems = document.getElementById('menuItems');

        menuToggle.addEventListener('click', function() {
            menuItems.classList.toggle('visible');
        });
    });
</script>